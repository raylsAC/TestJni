<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/jni_test_setstring"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="@string/hello_world"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/jni_test_getstring"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="@string/hello_world"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/jni_test_addnum"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="@string/hello_world"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/jni_test_sumarray"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="@string/hello_world"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/jni_test_stringarray"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="@string/hello_world"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/jni_test_stringobj"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="@string/hello_world"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/jni_test_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/jni_test_click"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="click me"
        android:textSize="20sp" />

</LinearLayout>